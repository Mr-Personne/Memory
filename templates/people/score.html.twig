{% extends 'base.html.twig' %}

{% block title %}Hello PeoplesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1><a href="{{ path('default') }}">Memory</a></h1>
    <h2>Hello {{ controller_name }}! âœ…</h2>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ '/var/www/html/src/Controller/PeopleController.php'|file_link(0) }}">src/Controller/PeopleController.php</a></code></li>
        <li>Your template at <code><a href="{{ '/var/www/html/templates/people/index.html.twig'|file_link(0) }}">templates/people/index.html.twig</a></code></li>
    </ul>

    

    <p>Score :</p>
    <p>{{score}}/{{maxScore}}</p>
    <p>The Answer VS Your Answer:</p>
    {% for item in answersVS %}
        {% if item["goodAnswer"] == "yes" %}
            <div style="color : green">
        {% elseif item["goodAnswer"] == "no" %}
            <div style="color : red">
        {% endif %}
                <h3>Person {{item["personIndex"]}} :</h3>
                <p>{{item["firstName"]}} VS {{item["userFirstName"]}}</p>
                <p>{{item["lastName"]}} VS {{item["userLastName"]}}</p>
                <p>{{item["address"]}} VS {{item["userAddress"]}}</p>
                <p>{{item["town"]}} VS {{item["userTown"]}}</p>
                <p>{{item["postalCode"]}} VS {{item["userPostalCode"]}}</p>
                <p>{{item["job"]}} VS {{item["userJob"]}}</p>
                <p>{{item["age"]}} VS {{item["userAge"]}}</p>
        </div>
    {% endfor %}
    <button><a href="{{ path('people_memorise') }}">Redo</a></button>
    <button><a href="{{ path('people_setup') }}">Re-setup</a></button>
    <button><a href="{{ path('default') }}">Astuces</a></button>
    <button><a href="{{ path('default') }}">Home</a></button>

</div>
{% endblock %}